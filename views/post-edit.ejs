<%- include("./partials/header.ejs") %>

<main>
  <section>
    <h2>Edit post</h2>
    <form id="post-form-edit" data-id="<%= post._id %>">
      <label for="title">Blog title:</label>
      <input type="text" id="title" name="title" placeholder="<%= post.title %>">
      <label for="snippet">Blog snippet:</label>
      <input type="text" id="snippet" name="snippet" placeholder="<%= post.snippet %>">
      <label for="body">Blog body:</label>
      <textarea id="body" name="body" placeholder="<%= post.body %>"></textarea>
      <button id="edit">Edit post</button> <button id="delete">Delete post</button>
    </form>
  </section>
</main>

<%- include("./partials/footer-post-edit.ejs") %>