<%- include("./partials/header.ejs") %>

<main>
  <section>
    <h2>All posts</h2>
    <% if (posts.length > 0) { %>
    <% posts.forEach(post => { %>

    <a href="/api/posts/<%= post._id %>"><div class="post"><h3 class="title"><%= post.title %></h3>
    <p class="snippet"><%= post.snippet %></p></div></a>

    <% }) %>
    <% } else { %>
    <p>There are no posts to display...</p>
    <% } %>

    </section>
</main>

