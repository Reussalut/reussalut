<%- include("./partials/header.ejs") %>

<div class="blogs content">
  <h2>All posts</h2>
  <% if (blogs.length > 0) { %>
  <% blogs.forEach(blog => { %>

  <h3 class="title"><%= blog.title %></h3>
  <p class="snippet"><%= blog.snippet %></p>

  <% }) %>
  <% } else { %>
  <p>There are no posts to display...</p>
  <% } %>

</div>

