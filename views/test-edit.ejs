<%- include("./partials/header.ejs") %>
<main>
    <section>
        <h2>Edit test <i class="far fa-trash-alt"></i></h2>
        <form id="test-form-edit" data-id="<%= test._id %>">
            <label for="question">Question:</label><br>
            <textarea id="question" name="question" rows="2" cols="70" placeholder="<%= test.question %>"></textarea><br>
            <label for="answer1">Answer 1:</label><br>
            <textarea id="answer1" name="answer1" rows="2" cols="70" placeholder="<%= test.answer1 %>"></textarea><br>
            <label for="answer2">Answer 2:</label><br>
            <textarea id="answer2" name="answer2" rows="2" cols="70" placeholder="<%= test.answer2 %>"></textarea><br>
            <label for="answer3">Answer 3:</label><br>
            <textarea id="answer3" name="answer3" rows="2" cols="70" placeholder="<%= test.answer3 %>"></textarea><br>
            <label for="answer4">Answer 4:</label><br>
            <textarea id="answer4" name="answer4" rows="2" cols="70" placeholder="<%= test.answer4 %>"></textarea><br>
            <label for="solution">Solution</label>
            <input type="number" name="solution" id="solution" placeholder="<%= test.solution %>">
            <button id="delete">Delete test</button> <button id="edit">Edit test</button>
        </form>
    </section>
</main>
<%- include("./partials/footer-test-edit.ejs") %>